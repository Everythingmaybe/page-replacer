{
  "name": "Page Replacer",
  "version": "1.0",
  "description": "Replacing all content on the page",
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "src/replacer.js" ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
